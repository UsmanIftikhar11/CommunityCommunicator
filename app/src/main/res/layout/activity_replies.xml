<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.communitycommunicator.Replies">

    <ImageView
        android:id="@+id/userImg2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/usericon"
        android:background="#00FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/txt_userName4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/userImg2"
        android:text="User Name"
        android:textColor="#000000"
        android:textSize="10sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/txt_singleComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/userImg2"
        android:text="Comment..."
        android:textColor="#000000"
        android:textSize="10sp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/text_view_border"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/img_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txt_singleComment"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/divider"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/repliesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/img_line2"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/et_reply"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp">


    </android.support.v7.widget.RecyclerView>

    <EditText
        android:id="@+id/et_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/btn_postReply"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:hint="write a reply"
        android:textSize="12sp"/>

    <ImageButton
        android:id="@+id/btn_postReply"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/send1"
        android:background="#00FFFFFF"/>

</RelativeLayout>
