<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/retreiceCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uploadCard"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0F3F4">

            <ImageView
                android:id="@+id/userImg1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/usericon"/>

            <TextView
                android:id="@+id/txt_userName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/userImg1"
                android:text="User Name"
                android:textColor="#000000"
                android:textSize="10sp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2018-04-23"
                android:textColor="#000000"
                android:textSize="10sp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/txt_caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userImg1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Message..."
                android:textSize="12sp"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txt_caption"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/img_line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/imageView"
                android:layout_marginTop="15dp"
                android:background="#B3B6B7"/>

            <ImageButton
                android:id="@+id/btn_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/like"
                android:scaleType="fitCenter"
                android:background="#00ffffff"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/img_line1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/txt_noOfLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_line1"
                android:layout_alignBaseline="@+id/btn_like"
                android:layout_toRightOf="@+id/btn_like"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:text="0"
                android:textSize="12sp"
                android:textColor="#000000"/>

            <ImageButton
                android:id="@+id/btn_comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/chat"
                android:scaleType="fitCenter"
                android:background="#00ffffff"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_line1"
                android:layout_marginTop="10dp"/>

            <ImageButton
                android:id="@+id/btn_disLike"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dislike"
                android:scaleType="fitCenter"
                android:background="#00ffffff"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/img_line1"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/txt_noOfdisLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_line1"
                android:layout_alignBaseline="@+id/btn_like"
                android:layout_toLeftOf="@+id/btn_disLike"
                android:layout_marginRight="10dp"
                android:layout_marginTop="13dp"
                android:text="0"
                android:textSize="12sp"
                android:textColor="#000000"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>