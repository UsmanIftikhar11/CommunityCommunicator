<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.communitycommunicator.Comments">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/commentList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/et_comemnt"
        android:layout_margin="10dp">


    </android.support.v7.widget.RecyclerView>

    <EditText
        android:id="@+id/et_comemnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/btn_postComment"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:hint="write a comment"
        android:textSize="12sp"/>

    <ImageButton
        android:id="@+id/btn_postComment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/send1"
        android:background="#00FFFFFF"/>

</RelativeLayout>
