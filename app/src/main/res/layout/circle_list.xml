<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_marginLeft="100dp"
    android:layout_marginRight="100dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    >

   <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0F3F4">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageCircle"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/usericon"
            app:civ_border_color="#FF000000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/txt_noOFUsers"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:text="1"
            android:layout_marginTop="20dp"
            android:textSize="10sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/round_text_view_border"
            android:textAlignment="center"
            android:layout_alignRight="@+id/imageCircle"/>

        <ImageView
            android:id="@+id/img_line3"
            android:layout_width="140dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_below="@+id/imageCircle"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

        <ImageButton
        android:id="@+id/btn_viewCircle"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_line3"
        android:layout_marginLeft="30dp"
        android:src="@mipmap/ic_remove_red_eye_black_24dp"
        android:background="@color/colorAccent"
        android:layout_marginBottom="10dp"
            android:layout_marginTop="3dp"
            android:clickable="false"/>

        <ImageButton
            android:id="@+id/btn_joinCircle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/img_line3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:src="@drawable/addcircles"
            android:background="#00FFFFFF"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/txt_circleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_viewCircle"
            android:layout_marginLeft="30dp"
            android:text="Circle Name"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"/>

        <ImageView
            android:id="@+id/img_line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/secondary_text"
            android:layout_below="@+id/txt_circleName"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>